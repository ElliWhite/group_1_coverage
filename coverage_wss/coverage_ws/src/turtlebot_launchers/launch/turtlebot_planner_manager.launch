<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="robot_name" default="turtlebot" />
  <arg name="simulator" value="vrep" />
  
  <arg name="respawn_value" default="false" /> <!-- boolean: true, false -->
  <arg name="use_marker_controller" default="true" /> <!-- boolean: true, false -->
  
  <arg name="enable_laser_proximity_callback" default="false"/>  <!-- enable a more conservative use
of laser proximity info -->
  <node name="path_planner_manager_$(arg robot_name)" pkg="path_planner" type="path_planner_manager" respawn="$(arg 
respawn_value)" output="screen"> 
        <param name = "robot_frame_name" value = "$(arg robot_name)/base_footprint"/>
        <param name = "int_marker_server_name" value = "/marker_controller"/>
        <param name = "int_marker_name" value = "$(arg robot_name)"/>
        
        <param name = "use_marker_controller" value = "$(arg use_marker_controller)"/>
        
        <param name = "path_planning_service_name" value = "/path_planning_service"/>
        
        <param name = "enable_laser_proximity_callback" value = "$(arg 
enable_laser_proximity_callback)"/>
            
        <!--param name = "goal_topic_name" value = "/$(arg simulator)/$(arg 
robot_name)/goal_topic"/-->
        <!--param name = "goal_abort_topic_name" value = "/$(arg simulator)/$(arg 
robot_name)/goal_abort_topic_name"/-->
        <remap from = "/clustered_pcl/wall" to = "/clustered_pcl/wall"/>
        <remap from = "/trav/traversability" to = "/trav/traversability"/> 
        
        <remap from = "/goal_topic" to = "$(arg robot_name)/goal_topic"/>
        <remap from = "/goal_abort_topic" to = "$(arg robot_name)/goal_abort_topic"/>
        <remap from = "/trajectory_control_abort_topic" to = "$(arg robot_name)/trajectory_control_abort_topic"/>
        
        <remap from = "/robot_path" to = "$(arg robot_name)/robot_path"/>
        <remap from = "/robot_local_path" to = "$(arg robot_name)/robot_local_path"/>
        
        <remap from = "/robot_path_draw" to = "$(arg robot_name)/robot_path_draw"/>
        <remap from = "/robot_local_path_draw" to = "$(arg robot_name)/robot_local_path_draw"/>
        <remap from = "/path_planner/visited_nodes" to = "$(arg robot_name)/path_planner/visited_nodes"/>
        <remap from = "/path_planner/localPath" to = "$(arg robot_name)/path_planner/localPath"/>
        
        <remap from = "/planner/tasks/path" to = "$(arg robot_name)/planner/tasks/path"/>
        <remap from = "/planner/tasks/global_path" to = "$(arg robot_name)/planner/tasks/global_path"/>
        <remap from = "/planner/tasks/feedback" to = "$(arg robot_name)/planner/tasks/feedback"/>
        
        <remap from = "/path_planning_status" to = "$(arg robot_name)/path_planning_status"/>
        
        <remap from = "/laser_proximity_topic" to = "$(arg robot_name)/laser_proximity_topic"/>
    
  </node> 
  
</launch>
